<%= render "shared/third-header"%>

<div class="room-main">
  <div class="room-page-left">
    <%= link_to image_tag("user-image.jpg", class:"room-page-image"), "#" %>
  </div>

  <%= form_with(url: room_join_path, method: :post, class: 'room-form-main') do |f| %>

    <div class="room-form-header">ルームに参加</div>

    <% if flash[:alert] %>
      <div class="room-alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="field">
      <label class="form-text">ルーム名</label>
      <%= f.text_field :room_name, class:"input-default", placeholder:"ルーム名を入力してください" %>
    </div>

    <div class="field">
      <label class="form-text">パスコード</label>
          <%= f.password_field :room_password, class:"input-default", placeholder:"パスコード" %>
    </div>

    <div class="actions">
      <%= f.submit "ルームに参加", class:"actions-btn" %>
    </div>

    <%= link_to "ルーム一覧ページ", rooms_path %>
  <% end %>

</div>
