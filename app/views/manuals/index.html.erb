<%= render "shared/header" %>

<div class="search">
  <%= form_with do |form| %>
    <%= form.text_field :keyword, placeholder: "商品名で検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>
  <%= link_to "メニューへ", room_path(@room), class: "manual-back" %>
  <%= link_to "登録", new_room_manual_path(@room), class: "manual-back" %>
</div>


<div class="manual-list">
  <% @manual.each do |manual| %>
    <div class="manual">
      <div class="manual-image">
        <% if manual.image.present? %>
          <%= link_to image_tag(manual.image ) %> 
        <% else %>
          <%= link_to image_tag("user-image.jpg"), "#" %>
        <% end %>
      </div>
      <div class="manual-name">
        <%= link_to manual.manual_name, room_manual_path(@room, manual) %>
      </div>
      <div class="manual-user">
        <%= link_to manual.user.name %>
      </div>
    </div>
  <% end %>
</div>