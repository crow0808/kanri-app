<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", model: f.object %>

  <div class="field">
    <label class="form-text">ニックネーム</label>
    <%= f.text_area :name, placeholder:"例) 山田太郎", maxlength:"40" %>
  </div>

  <div class="field">
    <label class="form-text">メールアドレス</label>
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autocomplete: "email" %>
  </div>

  <div class="field">
    <label class="form-text">パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="field">
    <label class="form-text">パスワード（確認）</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
