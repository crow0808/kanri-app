<%= render "shared/second-header"%>

<div class="user-main">
  <div class="user-page-left">
    <%= link_to image_tag("user-image.jpg", class:"user-page-image"), "#" %>
  </div>

  <%= form_with model: @user, url: user_session_path, class: 'registration-form-main', local: true do |f| %>

    <div class="user-form-header">ログイン</div>

    <div class="login-flash-message">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
      
    <div class="field">
      <label class="form-text">メールアドレス</label>
      <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可", autocomplete: "email" %>
    </div>

    <div class="field">
      <label class="form-text">パスワード</label>
      <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class:"actions-btn" %>
    </div>
  <%= render "devise/shared/links" %>

  <% end %>

</div>
