<h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
    
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
