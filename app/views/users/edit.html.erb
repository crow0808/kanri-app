<%= render "shared/second-header"%>


<div class="user-main">
  <div class="user-page-left">
    <%= link_to image_tag("user-image.jpg", class:"user-page-image"), "#" %>
  </div>

  <%= form_with model: current_user, class: "registration-form-main", local: true do |f|%>

    <div class="user-form-header">アカウントの編集</div>

    <div class="field">
      <label class="form-text">ニックネーム</label>
        <%= f.text_field :name, class:"input-default" %>
    </div>

    <div class="field">
      <label class="form-text">メールアドレス</label>
      <%= f.email_field :email, class:"input-default" %>
    </div>


    <div class="actions">
      <%= f.submit "変更して更新", class: "actions-btn"%>
    </div>
    <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn"%>

    <%= link_to "トップページに戻る", root_path, class: "btn"%>

  <% end %>
</div>
