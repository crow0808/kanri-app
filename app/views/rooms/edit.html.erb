<%= render "shared/header" %>

<div class="room-main">
  <div class="room-page-left">
    <%= link_to image_tag("user-image.jpg", class:"room-page-image"), "#" %>
  </div>

  <%= form_with model: @room, class: "registration-form-main", local: true do |f|%>

    <div class="user-form-header">ルームの編集</div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="field">
      <label class="form-text">ルーム名</label>
        <%= f.text_field :room_name, class:"input-default" %>
    </div>

    <div class="field">
      <label class="form-text">パスコード</label>
      <%= f.text_field :room_password, class:"input-default" %>
    </div>

    <div class="actions">
      <%= f.submit "変更して更新", class: "actions-btn"%>
    </div>

    <%= link_to "戻る", :back %>

    <%= link_to "ルームを削除する", room_path(@room), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？", class: "room-destroy-btn" } %>

  <% end %>

</div>